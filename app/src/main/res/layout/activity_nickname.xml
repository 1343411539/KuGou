<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nickname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:divider="@drawable/ll_divider_horizontal_1dp"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="android.hhh.com.kugou.NicknameActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:navigationIcon="@drawable/ic_back"
        app:title="昵称"
        app:titleTextAppearance="@style/toolbar_title">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:text="保存"
            android:fontFamily="@string/common_google_play_services_enable_title"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_profession"
        android:background="#ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:gravity="top|left"
            android:hint="编辑昵称"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@drawable/shape_cursor_style"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="· 昵称只支持中文、英文、数字以及_两个符号"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="· 禁止输入色情、广告、虚假信息等"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
