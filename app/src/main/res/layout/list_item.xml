<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/music_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_music" />

        <TextView
            android:id="@+id/music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/music_image"
            android:singleLine="true"
            android:text="歌曲："
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_tv"
            android:layout_alignLeft="@id/music_tv"
            android:layout_marginTop="10dp"
            android:text="歌手："
            android:textColor="#888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_local_music_line"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_alignTop="@id/author_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/author_tv"
            android:background="#888" />

        <TextView
            android:id="@+id/item_local_music_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/author_tv"
            android:layout_toRightOf="@id/item_local_music_line"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/music_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_tv"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#888"
            android:textSize="14sp" />
    </RelativeLayout>


</LinearLayout>