<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.hhh.com.kugou.huang.SettingActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/settingback"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ly_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ly_setting_title"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#60000000"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_backIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrowheadleft"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="设置"
                        android:textColor="@color/settingWhite"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/ly_setting_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly_setting_title"
                    android:showDividers="middle"
                    android:divider="@drawable/linearlayout_horizonal_divider"
                    android:dividerPadding="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ly_setting_item_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello酷狗问候音"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:layout_weight="4"/>
                        <Switch
                            android:id="@+id/sb_setting_1"
                            android:layout_width="10dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_setting_item_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_setting_1"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择问候音"
                            android:textColor="@color/settingWhite"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="经典版"
                            android:textColor="@color/settingWhite"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrowheadright"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_setting_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly_setting_1"
                    android:showDividers="middle"
                    android:divider="@drawable/linearlayout_horizonal_divider"
                    android:dividerPadding="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ly_setting_item_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号和绑定设置"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1"
                            android:id="@+id/textView" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrowheadright" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_setting_item_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息和隐私设置"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrowheadright" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_setting_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="middle"
                    android:divider="@drawable/linearlayout_horizonal_divider"
                    android:dividerPadding="10dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/ly_setting_2">
                    <LinearLayout
                        android:id="@+id/ly_setting_item_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="皮肤中心"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrowheadright" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_setting_item_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="自动下载歌手写真"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="4"
                            android:id="@+id/textView2" />

                        <android.hhh.com.kugou.huang.SlideButton
                            android:id="@+id/sb_setting_2"
                            android:layout_width="15dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_setting_item_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="专辑封面自动旋转"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="4"/>
                        <android.hhh.com.kugou.huang.SlideButton
                            android:id="@+id/sb_setting_3"
                            android:layout_width="15dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_setting_item_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="车载歌词"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="4"/>
                        <android.hhh.com.kugou.huang.SlideButton
                            android:id="@+id/sb_setting_4"
                            android:layout_width="15dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_setting_item_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="播放首页背景动画"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="4"/>
                        <android.hhh.com.kugou.huang.SlideButton
                            android:id="@+id/sb_setting_5"
                            android:layout_width="15dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_setting_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly_setting_3"
                    android:showDividers="middle"
                    android:divider="@drawable/linearlayout_horizonal_divider"
                    android:dividerPadding="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ly_setting_item_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="歌曲下载目录"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrowheadright" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_setting_item_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="#20000000"
                        android:foreground="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关于KuGou音乐"
                            android:textColor="@color/settingWhite"
                            android:textSize="18dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrowheadright" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/design_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@mipmap/settingback"
        app:menu="@menu/drawer_menu">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
